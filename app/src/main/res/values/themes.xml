<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TakeHomeExercise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="rippleColor">@color/ripple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="toolbarText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="screenColor">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="textStyles">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
</resources>